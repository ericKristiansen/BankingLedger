@model  WorldsGreatestBankLedgerWebApp.Data.LoginData
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script>
        /*
         * Show the login, and clear the inputs when the page is loaded.
         */
        window.onload = function () {
            $('#login-modal').modal('show');
            $('input[type="text"]').val('');
        }
    </script>

</head>
<body>
    <div class="jumbotron">
        <div class="center-block">
            <h2>Hello and Welcome!</h2>
            <h1>Login</h1>
        </div>
        <p class="text-center lead">Can't login? Please, ensure that you're registered.</p>
    </div>


    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="loginmodal-container">

                <div class="container-fluid">

                    <button type="button" class="close right" data-dismiss="modal">&times;</button>
                    <h2 class=" col-md-4 col-md-offset-4"><span class="glyphicon glyphicon-pencil"></span> Login</h2>

                    @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
                    {
                        <table class="table col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4">
                            <tr>
                                <td>@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "input-lg col-md-4", placeholder = "UserName" } })</td>
                            </tr>
                            <tr>
                                <td>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input-lg col-md-4 ", placeholder = "Password" } })</td>
                            </tr>
                            <tr>
                                <td><input type="submit" name="login" class="btn-primary col-md-4 input-lg" value="Login"></td>
                            </tr>
                        </table>
                    }

                </div>

            </div>
        </div>
    </div>


    <div class="modal fade" id="register-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
        <div class="modal-dialog">
            <div class="loginmodal-container">

                <div class="container-fluid">
                    <button type="button" class="close right" data-dismiss="modal">&times;</button>
                    <h2 class=" col-md-4 col-md-offset-4"><span class="glyphicon glyphicon-pencil"></span> Register</h2>


                    @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                    {
                        <table class="table col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4">
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "input-lg col-md-4", placeholder = "UserName" } })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input-lg col-md-4", placeholder = "Password" } })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "input-lg col-md-4", placeholder = "Confirm Password" } })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="submit" name="register" class="btn-primary col-md-4 input-lg" value="Register">
                                </td>
                            </tr>

                        </table>

                    }

                </div>

            </div>
        </div>
    </div>


</body>
</html>
